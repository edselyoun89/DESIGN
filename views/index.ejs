<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <!-- Подключение Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Подключение шрифта Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <!-- Подключение Animate.css -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">
    <!-- Подключение AOS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" rel="stylesheet">
    <!-- Подключение стилей -->
    <link rel="stylesheet" href="/stylesheets/style.css">
    <!-- Custom CSS -->
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #121212;
            color: #f5f5f5;
        }
        .navbar {
            background-color: #1f1f1f;
        }
        .navbar-brand, .nav-link {
            color: #f5f5f5 !important;
        }
        .navbar-brand:hover, .nav-link:hover {
            color: #1db954 !important;
        }
        .btn-primary {
            background-color: #1db954;
            border-color: #1db954;
        }
        .btn-primary:hover {
            background-color: #14843a;
            border-color: #14843a;
        }
        .btn-secondary {
            background-color: #333333;
            border-color: #333333;
        }
        .btn-secondary:hover {
            background-color: #555555;
        }
        .card {
            background-color: #1f1f1f;
            border: none;
        }
        .card-title {
            color: #1db954;
        }
        .footer {
            background-color: #1f1f1f;
        }
        a {
            color: #1db954;
        }
        a:hover {
            color: #14843a;
            text-decoration: none;
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
</head>
<body>
    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-lg shadow">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" href="/">Design Project</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <% if (user) { %>
                            <li class="nav-item">
                                <a class="nav-link">Привет, <strong><%= user.username %></strong>!</a>
                            </li>
                            <li class="nav-item">
                                <form action="/logout" method="POST">
                                    <button class="btn btn-primary">Выйти</button>
                                </form>
                            </li>
                        <% } else { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/login">Вход</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/register">Регистрация</a>
                            </li>
                        <% } %>
                        <li class="nav-item">
                            <a class="nav-link" href="/designs">Все дизайны</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/add">Добавить дизайн</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="container mt-4">
        <div class="text-center">
            <h1 class="animate__animated animate__fadeInDown mb-4"><%= title %></h1>
            <% if (user) { %>
                <p class="text-success animate__animated animate__fadeInUp">Добро пожаловать, <strong><%= user.username %></strong>!</p>
            <% } else { %>
                <p class="text-muted animate__animated animate__fadeInUp">Привет, гость! <a href="/register" class="text-primary">Зарегистрируйтесь</a> или <a href="/login" class="text-primary">войдите</a>.</p>
            <% } %>
        </div>

        <!-- Search Form -->
        <form action="/search" method="GET" class="d-flex mb-4">
            <input 
                type="text" 
                name="q" 
                class="form-control me-2 shadow-sm bg-dark text-light" 
                placeholder="Введите название дизайна" 
                required>
            <button type="submit" class="btn btn-primary shadow-sm">Найти</button>
        </form>

        <!-- Designs Section -->
        <div class="row">
            <% if (designs && designs.length > 0) { %>
                <% designs.forEach(design => { %>
                    <div class="col-md-4 mb-4" data-aos="zoom-in">
                        <div class="card h-100 shadow-lg">
                            <img src="<%= design.picture %>" class="card-img-top" alt="<%= design.title %>">
                            <div class="card-body">
                                <h5 class="card-title"><%= design.title %></h5>
                                <p class="card-text text-muted"><%= design.desc %></p>
                                <a href="/design/<%= design._id %>" class="btn btn-outline-primary w-100">Подробнее</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p class="text-center text-muted">Дизайны не найдены</p>
            <% } %>
        </div>

        <!-- Buttons Section -->
        <div class="d-flex justify-content-center mt-4">
            <a href="/add" class="btn btn-success me-2 shadow-sm">Добавить новый дизайн</a>
            <a href="/designs" class="btn btn-secondary shadow-sm">Посмотреть все дизайны</a>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer text-center py-3 mt-4">
        <p>© 2024 Design Project. Все права защищены.</p>
    </footer>

    <script>
        // Initialize animations
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
        });
    </script>
</body>
</html>
