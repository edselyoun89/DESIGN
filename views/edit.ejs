<% layout('./layout/page.ejs') %>
<h1 class="text-center animate__animated animate__fadeInDown" style="color: #76e6c9; font-weight: bold;"><%= title %></h1>

<form action="/edit/<%= design._id %>" method="POST" class="mt-4" data-aos="fade-up" style="max-width: 600px; margin: 0 auto;">
  <div class="mb-3">
    <label for="title" class="form-label" style="color: #e0e0e0; font-weight: bold;">Название дизайна</label>
    <input 
      type="text" 
      class="form-control shadow-sm" 
      id="title" 
      name="title" 
      value="<%= design.title %>" 
      style="border-radius: 30px; padding: 10px 20px; border: 2px solid #4caf50; background-color: #2a2a2a; color: #ffffff;" 
      required>
  </div>
  <div class="mb-3">
    <label for="picture" class="form-label" style="color: #e0e0e0; font-weight: bold;">Ссылка на изображение</label>
    <input 
      type="url" 
      class="form-control shadow-sm" 
      id="picture" 
      name="picture" 
      value="<%= design.picture %>" 
      style="border-radius: 30px; padding: 10px 20px; border: 2px solid #4caf50; background-color: #2a2a2a; color: #ffffff;" 
      required>
  </div>
  <div class="mb-3">
    <label for="desc" class="form-label" style="color: #e0e0e0; font-weight: bold;">Описание дизайна</label>
    <textarea 
      class="form-control shadow-sm" 
      id="desc" 
      name="desc" 
      rows="3" 
      style="border-radius: 15px; padding: 15px 20px; border: 2px solid #4caf50; background-color: #2a2a2a; color: #ffffff;" 
      required><%= design.desc %></textarea>
  </div>
  <button 
    type="submit" 
    class="btn btn-success shadow-sm" 
    style="font-weight: bold; border-radius: 30px; padding: 10px 20px; transition: transform 0.2s; width: 100%;">
    Сохранить изменения
  </button>
</form>

<script>
  // Эффекты при наведении на кнопку
  document.querySelector('.btn-success').addEventListener('mouseover', function () {
    this.style.transform = 'scale(1.05)';
  });
  document.querySelector('.btn-success').addEventListener('mouseout', function () {
    this.style.transform = 'scale(1)';
  });
</script>
