<% layout('./layout/page.ejs') %>
<h1 class="text-center animate__animated animate__fadeInDown" style="color: #1db954;"><%= title %></h1>
<form action="/add" method="POST" class="mt-4" data-aos="fade-up">
  <div class="mb-4">
    <label for="title" class="form-label fw-bold" style="color: #f5f5f5;">Название дизайна</label>
    <input type="text" class="form-control shadow" id="title" name="title" required style="background-color: #1f1f1f; color: #f5f5f5; border: none; border-radius: 10px;">
  </div>
  <div class="mb-4">
    <label for="picture" class="form-label fw-bold" style="color: #f5f5f5;">Ссылка на изображение</label>
    <input type="url" class="form-control shadow" id="picture" name="picture" required style="background-color: #1f1f1f; color: #f5f5f5; border: none; border-radius: 10px;">
  </div>
  <div class="mb-4">
    <label for="desc" class="form-label fw-bold" style="color: #f5f5f5;">Описание дизайна</label>
    <textarea class="form-control shadow" id="desc" name="desc" rows="3" required style="background-color: #1f1f1f; color: #f5f5f5; border: none; border-radius: 10px;"></textarea>
  </div>
  <button type="submit" class="btn btn-success w-100 shadow" style="font-weight: bold; border-radius: 50px; transition: transform 0.2s;">
    Добавить дизайн
  </button>
</form>

<script>
  // Добавление эффекта масштабирования при наведении на кнопку
  document.querySelector('button').addEventListener('mouseover', function () {
    this.style.transform = 'scale(1.05)';
  });
  document.querySelector('button').addEventListener('mouseout', function () {
    this.style.transform = 'scale(1)';
  });
</script>
